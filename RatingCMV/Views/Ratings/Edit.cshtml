@model CommunicationAppAPI.Models.Rating

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rating number @Html.DisplayFor(model => model.Id) by @Html.DisplayFor(model => model.Name) </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            -->

            <div class="form-group">
                 <br />
                  <div><label asp-for="Rate" class="control-label"></label></div>
                <div class="form-check-inline">
                      <label class="control-label" asp-for="Rate">1</label>
                      <input class="form-check-input" type="radio" asp-for="Rate" value=1>
                </div>

                <div class="form-check form-check-inline">
                      <label class="control-label"asp-for="Rate">2</label>
                       <input class="form-check-input" type="radio" asp-for="Rate" value=2>
                </div>
                <div class="form-check form-check-inline">
                    <label class="control-label" asp-for="Rate">3</label>  
                    <input class="form-check-input" type="radio" asp-for="Rate" value=3>  
                </div>
                <div class="form-check form-check-inline">
                      <label class="control-label" asp-for="Rate">4</label>
                      <input class="form-check-input" type="radio" asp-for="Rate" value=4>
                </div>
                <div class="form-check form-check-inline">
                      <label class="control-label"asp-for="Rate">5</label>
                      <input class="form-check-input" type="radio" asp-for="Rate" value=5 checked>
                </div>
                 <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="form-group">
                 <br />
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!--
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            -->
            <div class="form-group">
                 <br />
                 <input type="submit" value="Save" class="btn btn-success" />
                 <a asp-action="Index" class= "btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
