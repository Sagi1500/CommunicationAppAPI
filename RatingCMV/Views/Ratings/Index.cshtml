@model IEnumerable<CommunicationAppApi.Models.Rating>

@{
    ViewData["Title"] = "Index";
}



<h1>Ratings </h1>
<h5>
    Check out our reviews to find out what users think.
    <br />
    <br />
</h5>

<form asp-action="Search" class="input-group input-group-md">
    <input class="col-9" name="query" id="search" aria-describedby="inputGroup-sizing-lg"/>
    <input type="submit" value="Search" class="btn btn-secondary col-1" />
    <a asp-action="Create" class="btn btn-success col-2"> Create Rating</a>
</form>


<div class="accordion">
    @foreach (var item in Model)
    {
        <div class="accordion-item">
            @{
                var currentId = "panelsStayOpen-" + (item.Id).ToString();
                var currentIdReference = "#panelsStayOpen-" + (item.Id).ToString();
            }
            <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                <buttion class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@currentIdReference aria-expanded="false" aria-controls=@currentId>
                    <strong>
                        @Html.DisplayFor(modelItem => item.Name) rated this app @Html.DisplayFor(modelItem => item.Rate) out of 5.
                    </strong>
                </buttion>
            </h2>
            <div id=@currentId class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
                <div class="accordion-body">
                    <strong>Serial number (Id): </strong> @Html.DisplayFor(modelItem => item.Id)<br>
                    <strong>Last update time:  </strong> @Html.DisplayFor(modelItem => item.Time) <br>
                    <strong>Description:  </strong> <br> @Html.DisplayFor(modelItem => item.Description)
                    <br> <br>
                    <div class="btn-group" role="group" style={margin-left: auto; margin-right=0;}>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>




@section Scripts {
<script type="text/html" id="template">
        <div class="accordion-item">
            @{
               var currentId= "panelsStayOpen-" + "{id}";
               var currentIdReference= "#panelsStayOpen-" + "{id}";
           }
            <h2 class="accordion-header" id="panelsStayOpen-headingThree">
             <buttion class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@currentIdReference aria-expanded="false" aria-controls=@currentId>
                  <strong>
                  {name} rated this app {rate} out of 5.
                  </strong>
            </buttion>
        </h2>
       <div id=@currentId class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
        <div class="accordion-body">
            <strong>Serial number (Id): </strong> {id}<br>
            <strong>Last update time:  </strong> {time} <br>
                <strong>Description:  </strong> <br> {description}
            <br> <br>
             <div class="btn-group" role="group" style={margin-left: auto; margin-right= 0;}>
             <a asp-action="Edit" asp-route-id="{id}" class="btn btn-primary">Edit</a>
             <a asp-action="Details" asp-route-id="{id}" class="btn btn-info">Details</a>
             <a asp-action="Delete" asp-route-id="{id}" class="btn btn-danger">Delete</a>
             </div>
         </div>
       </div>
    </div>

</script>

<script src="~/js/search.js"></script>
    }





